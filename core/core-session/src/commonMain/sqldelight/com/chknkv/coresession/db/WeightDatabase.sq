CREATE TABLE WeightMeasurement (
    date TEXT NOT NULL PRIMARY KEY,
    weight REAL NOT NULL
);

insertWeight:
INSERT OR REPLACE INTO WeightMeasurement(date, weight)
VALUES (?, ?);

selectWeightsByRange:
SELECT *
FROM WeightMeasurement
WHERE date >= ? AND date <= ?
ORDER BY date ASC;

selectAllWeights:
SELECT *
FROM WeightMeasurement
ORDER BY date DESC
LIMIT :limit OFFSET :offset;

deleteAll:
DELETE FROM WeightMeasurement;

deleteWeight:
DELETE FROM WeightMeasurement
WHERE date = ?;
